@model IEnumerable<WebAdmin.Models.TblCompra>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCentro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlterna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCorpCent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioModifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCentro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlterna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCorpCent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioModifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstatusRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCompra">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCompra">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCompra">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
