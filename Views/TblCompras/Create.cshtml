@model WebAdmin.ViewModels.ComprasViewModel

@{
    ViewData["Title"] = "Crear Tipo de Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administración /</span> Compra</h4>
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-8">
            <div class="card-header d-flex align-items-center justify-content-between">
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="mb-3 col-md-3">
                            <label class="form-label" asp-for="TblCompras.IdTipoCompra"></label>
                            <div class="input-group input-group-merge">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text">
                                        <i class="bx bx-check-shield">
                                        </i>
                                    </span>
                                    <select id="lTipoCompra" class="form-select" required
                                        asp-for="TblCompras.IdTipoCompra"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')"
                                        asp-items="@(new SelectList(ViewBag.ListaTipoCompra, "IdTipoCompra", "TipoCompraDesc"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 col-md-5">
                            <label class="form-label" asp-for="TblCompras.CompraDesc"></label>
                            <div class="input-group input-group-merge">
                                <span id="2" class="input-group-text">
                                    <i class="bx bx-check-shield"></i>
                                </span>
                                <input spellcheck="true" style="text-transform:uppercase" type="text" class="form-control" id="" required
                                    oninvalid="this.setCustomValidity('Campo Requerido')"
                                    onchange="this.setCustomValidity('')" aria-label="John Doe" aria-describedby="2"
                                    asp-for="TblCompras.CompraDesc" />
                            </div>
                        </div>
                        <div class="mb-3 col-md-2">
                            <label class="form-label" asp-for="TblCompras.FolioCompra"></label>
                            <div class="input-group input-group-merge">
                                <span id="2" class="input-group-text">
                                    <i class="bx bx-check-shield"></i>
                                </span>
                                <input spellcheck="true" style="text-transform:uppercase" type="text" class="form-control" id="" required
                                    oninvalid="this.setCustomValidity('Campo Requerido')"
                                    onchange="this.setCustomValidity('')" placeholder="Requerido" aria-label="John Doe"
                                    aria-describedby="2" asp-for="TblCompras.FolioCompra" />
                            </div>
                        </div>
                        <div class="mb-3 col-md-2">
                            <label for="FechaCompra" class="form-label" asp-for="TblCompras.FechaCompra"></label>
                            <div class="input-group input-group-merge">
                                <span id="2" class="input-group-text">
                                    <i class="bx bx-check-shield"></i>
                                </span>
                                <input spellcheck="true" style="text-transform:uppercase" type="date" class="form-control" id=""
                                    required oninvalid="this.setCustomValidity('Campo Requerido')"
                                    onchange="this.setCustomValidity('')" placeholder="Requerido" aria-label="John Doe"
                                    aria-describedby="2" asp-for="TblCompras.FechaCompra" />
                            </div>
                        </div>
                       
                    </div>
                    <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label"
                                            asp-for="@Model.RelCompraProductos[0].Cantidad"></label>
                                        <input spellcheck="true" type="number" id="i_pago_monto" class="form-control" value="0"
                                            asp-for="@Model.RelCompraProductos[0].Cantidad" required />
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <label class="control-label" asp-for="@Model.RelCompraProductos[0].ProdServDesc"></label>
                                        <input spellcheck="true" type="text" id="i_pago_diferencia" class="form-control"  asp-for="@Model.RelCompraProductos[0].ProdServDesc"
                                             />
                                    </div>
                                </div>
 <div class="mb-3 col-md-3">
                <label  class="form-label" asp-for="@Model.RelCompraProductos[0].Precio"></label>
                <div class="input-group input-group-merge">
                  <span id="2" class="input-group-text"><i class="fa-solid fa-map-location-dot"></i></span>
                  <input spellcheck="true" style="text-transform:uppercase" type="number" class="form-control" id="iCodigoPostal"
                     aria-label="John Doe" aria-describedby="2" asp-for="@Model.RelCompraProductos[0].Precio" required oninvalid="this.setCustomValidity('Campo Requerido')"
                    onchange="this.setCustomValidity('')"/>
                  <button class="btn btn-outline-primary" type="button" id="btnCP">Agregar</button>
                </div>
              </div>
                                
                            </div>
                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-6">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">TIPO PAGO</label>
                                        <select id="l_tipo_pago" class="form-select"
                                            oninvalid="this.setCustomValidity('Campo Requerido')"
                                            onchange="this.setCustomValidity('')" required
                                            asp-items="@(new SelectList(ViewBag.ListaTipoPago, "IdTipoPago", "TipoPagoDesc"))">
                                            <option value="">SELECCIONAR</option>
                                        </select>
                                    </div>
                                </div>
                               <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group" id="lCodigoPago" hidden>
                                        <label class="control-label">CODIGO PAGO</label>
                                        <input spellcheck="true" id="i_codigo_pago" class="form-control" required />
                                    </div>
                                </div>
                                <div class="col-md-6">

                                </div>
                            </div>
                            </div>
                            <br />
                            
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">PAGO</label>
                                        <input spellcheck="true" type="number" id="i_pago_monto" class="form-control" value="0"
                                            required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">DIFERENCIA</label>
                                        <input spellcheck="true" type="number" id="i_pago_diferencia" class="form-control" value="0"
                                            readonly />
                                    </div>
                                </div>


                            </div>
                            <br />

                        </div>
                        <!-- /.col -->
                        <div class="col-6">
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th>Total:</th>
                                        <td>
                                            <label id="l_total_venta"></label>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input spellcheck="true" type="submit" value="Crear" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}