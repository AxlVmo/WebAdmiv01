  function DatosPresupuesto() {
    $.ajax({
      type: "GET",
      url: "/TblCentros/DatosPresupuesto/",
      data: {},
      contentType: "application/json;charset=utf-8",
      dataType: "json",
      success: function (list) {

        if (list.length == 0) {
          document.getElementById("i_fRegistrosPresupuesto").value = null;
          document.getElementById("i_fMontosPresupuesto").value = null;
        }
        else {

          for (var i = 0, len = list.length; i < len; i++) {
            document.getElementById('i_fRegistrosPresupuesto').innerText = 'Acumulado: ' + list[i].fRegistros;
            document.getElementById("i_fMontosPresupuesto").innerText = 'Minimo: ' + list[i].fMontos.toLocaleString('en-US', {style: 'currency',currency: 'USD',});
          }

        }
      },
      error: function () {
        var v_fMontosPresupuesto = 0;
        document.getElementById('i_fRegistrosPresupuesto').innerText = 'Acumulado: ' + v_fMontosPresupuesto;
        document.getElementById("i_fMontosPresupuesto").innerText = 'Minimo: ' + v_fMontosPresupuesto.toLocaleString('en-US', {style: 'currency',currency: 'USD',});
