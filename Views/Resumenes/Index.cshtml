<script>
  $(document).ready(function () {
    DatosSuministros();
    DatosNominas();
  });

  function DatosSuministros() {
    $.ajax({
      type: "GET",
      url: "/TblSuministroes/DatosResumen/",
      data: {},
      contentType: "application/json;charset=utf-8",
      dataType: "json",
      success: function (list) {

        if (list.length == 0) {
          document.getElementById("i_fRegistrosSuministros").value = null;
          document.getElementById("i_fMontosSuministros").value = null;
        }
        else {

          for (var i = 0, len = list.length; i < len; i++) {
            document.getElementById('i_fRegistrosSuministros').innerText = 'Total Suministros: ' + list[i].fRegistros;
            document.getElementById("i_fMontosSuministros").innerText = 'Monto Suministros: ' + list[i].fMontos.toLocaleString('en-US', {
              style: 'currency',
              currency: 'USD',
            });
          }

        }
      },
      error: function () {
        
      }
    });

    return false;
  }
  function DatosNominas() {
    $.ajax({
      type: "GET",
      url: "/TblNominas/DatosResumen/",
      data: {},
      contentType: "application/json;charset=utf-8",
      dataType: "json",
      success: function (list) {

        if (list.length == 0) {
          document.getElementById("i_fRegistrosNominas").value = null;
          document.getElementById("i_fMontosNominas").value = null;
        }
        else {

          for (var i = 0, len = list.length; i < len; i++) {
            document.getElementById('i_fRegistrosNominas').innerText = 'Total Nominas: ' + list[i].fRegistros;
            document.getElementById("i_fMontosNominas").innerText = 'Monto Nominas: ' + list[i].fMontos.toLocaleString('en-US', {
              style: 'currency',
              currency: 'USD',
            });
          }

        }
      },
      error: function () {
        
      }
    });
  }
</script>
