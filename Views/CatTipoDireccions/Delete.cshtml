@model WebAdmin.Models.CatTipoDireccion

@{
    ViewData["Title"] = "Desactivar Tipos Direcciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Catálogos /</span> Tipo de Direccion</h4>
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDireccionDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoDireccionDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdEstatusRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEstatusRegistro)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input spellcheck="true"  style="text-transform:uppercase" type="text" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required type="hidden" asp-for="IdTipoDireccion" />
        <input spellcheck="true" type="submit" value="Desactivar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
            </div>
        </div>
    </div>
</div>
