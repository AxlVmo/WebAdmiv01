@model WebAdmin.Models.CatTipoFormaPago

@{
ViewData["Title"] = "Editar Tipo Forma de Pago";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Catálogos</li>
        <li class="breadcrumb-item">Control de Tipo de Forma de Pago</li>
        <li class="breadcrumb-item active" aria-current="page">Editar Tipo Forma de Pago</li>
    </ol>
</nav>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdTipoFormaPago" id="IdMarca" />
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="TipoFormaPagoDesc" class="control-label"></label>
                <input style="text-transform:uppercase" placeholder="Campo Requerido" type="text"
                    oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required
                    asp-for="TipoFormaPagoDesc" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="IdEstatusRegistro" class="control-label"></label>
                <select id="idEstatusLista" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')"
                    onchange="this.setCustomValidity('')" required asp-for="IdEstatusRegistro"
                    asp-items="@(new SelectList(ViewBag.ListaCatEstatus," IdEstatusRegistro","EstatusDesc"))">
                    <option value="">SELECCIONAR</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Actializar" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</form>


@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $(document).ready(function () {
        $(".statesSelect").select2();
    });
</script>
}