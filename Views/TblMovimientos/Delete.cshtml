@model WebAdmin.Models.TblMovimiento

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administración /</span> Movimiento</h4>
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdTipoMovimiento)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdTipoMovimiento)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MovimientoDesc)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MovimientoDesc)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdCorpCent)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdCorpCent)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdUsuarioModifico)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdUsuarioModifico)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaRegistro)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdEstatusRegistro)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdEstatusRegistro)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input spellcheck="true" type="hidden" asp-for="IdEstatusRegistro" />
                    <input spellcheck="true" type="submit" value="Desactivar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                </form>
            </div>
        </div>
    </div>
</div>
