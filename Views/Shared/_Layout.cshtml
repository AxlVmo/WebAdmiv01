            <!-- Nav Item - Centros Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseConsultas"
                   aria-expanded="true" aria-controls="collapseConsultas">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Consultas</span>
                </a>
                <div id="collapseConsultas" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Finanzas:</h6>
                        <a class="collapse-item" asp-area="" asp-controller="" asp-action="Index">Inversiones</a>
