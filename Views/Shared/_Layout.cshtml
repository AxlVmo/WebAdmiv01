                    </div>
                </div>
            </li>
            <!-- Nav Item - Centros Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseCentros"
                   aria-expanded="true" aria-controls="collapseCentros">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Corporativo</span>
                </a>
                <div id="collapseCentros" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Administración:</h6>
                        <a class="collapse-item" asp-area="" asp-controller="TblEmpresas" asp-action="Index">Empresa</a>
