@model WebAdmin.Models.CatProducto

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Catálogos</li>
        <li class="breadcrumb-item">Producto</li>
        <li class="breadcrumb-item">Control de Producto</li>
        <li class="breadcrumb-item active" aria-current="page">Crear Producto</li>
    </ol>
</nav>
<hr />


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="DescProducto" class="control-label"></label>
                <input spellcheck="true"  style="text-transform:uppercase" placeholder="Requerido" type="text" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="DescProducto" class="form-control" type="text" />
                <span asp-validation-for="DescProducto" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select id="drpCategorias" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="IdCategoria"
                    asp-items="@(new SelectList(ViewBag.ListaCategoria,"IdCategoria","CategoriaDesc"))">
                    <option value="">SELECCIONAR</option>
                </select>
                
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="CodigoExterno" class="control-label"></label>
                <input spellcheck="true"  style="text-transform:uppercase" placeholder="Requerido" type="text" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="CodigoExterno" class="form-control" type="text" />
                
            </div>
        </div>
      <div class="col-md-2">
            <div class="form-group">
                <label asp-for="ProductoPrecioUno" class="control-label"></label>
                <input spellcheck="true" asp-for="ProductoPrecioUno" class="form-control" type="number" />
                <span asp-validation-for="ProductoPrecioUno" class="text-danger"></span>
            </div>
        </div>
    </div>
  <br />
        <div class="form-group">
            <input spellcheck="true" type="submit" value="Crear" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </div>
</form>
@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $('#drpCategorias').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
</script>
}
