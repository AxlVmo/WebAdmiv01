                </div>

                    </div>
                    <div class="mt-2">
                        <input type="submit" value="Actualizar" class="btn btn-warning" />
                        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                    </div>
                  
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script>
    $('#lTipoPrestamo').change(function () {
        var SelectedText = $('option:selected', this).text();
        var SelectedValue = $('option:selected', this).val();
        if (SelectedText == "INTERNO") {
            document.getElementById("rPersona").setAttribute("hidden", true);
            $('#hIdCentroPrestamo').removeAttr('hidden');
        }
        else {
            document.getElementById("hIdCentroPrestamo").setAttribute("hidden", true);
            $('#rPersona').removeAttr('hidden');
        }
    });
</script>
}
