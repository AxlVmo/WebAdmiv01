@model IEnumerable<WebAdmin.Models.TblUsuario>

@{
    ViewData["Title"] = "Crear Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Empresa</li>
        <li class="breadcrumb-item">Usuarios</li>
        <li class="breadcrumb-item active" aria-current="page">Control de Usuarios</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-2">
        <div class="form-group"></div>
        <p>
            <a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register" style="text-align:center; visibility:hidden;"><i class="fas fa-plus"></i> Nuevo</a>
        </p>
    </div>
    <div class="col-md-6 col-xl-3 col-sm-12" id="iCorpCent" hidden>
        <div class="form-group">
            <label class="control-label">Corporativo / Centro</label>
            <select id="drpCorpCent" class="form-select" onchange="myFunction()"
                asp-items="@(new SelectList(ViewBag.ListaCorpCent,"IdCentro","CentroDesc"))">
                <option value="">SELECCIONAR / LIMPIAR</option>
            </select>
        </div>
    </div>
</div>
<table class="table" id="tblUsuarios">
    <thead>
        <tr>
            <th style="text-align:center" hidden>
                @Html.DisplayNameFor(model => model.IdCorporativo)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.ApellidoPaterno)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.ApellidoMaterno)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center" hidden>
                    @Html.DisplayFor(modelItem => item.IdCorporativo)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.ApellidoMaterno)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td style="text-align:center">
                    @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check-circle" style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-stop-circle" style="font-size: 1em; color: red;"></i>
                    }
                </td>
                <td id="iAcciones">
                    <a id="iEditaUsuario" asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-outline-secondary"
                    title="Editar"><i class="far fa-edit" style="font-size: 1em; color: #FFC300; "></i></a>
                    <a id="iDetalleUsuario" asp-action="Details" asp-route-id="@item.IdUsuario"
                    class="btn btn-outline-secondary" title="Detalles"><i class="far fa-list-alt"
                        style="font-size: 1em; color: #67C5C4 ; "></i></a>
                    <a id="iDesactivaUsuario" asp-action="Delete" asp-route-id="@item.IdUsuario"
                    class="btn btn-outline-secondary" title="Desactivar"><i class="far fa-stop-circle"
                        style="font-size: 1em; color: #FF9333; "></i></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
               <th style="text-align:center" hidden>
                @Html.DisplayNameFor(model => model.IdCorporativo)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.ApellidoPaterno)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.ApellidoMaterno)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
    
        </tr>
    </tfoot>
</table>
@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
        
<script type="text/javascript">
    $(document).ready(function () {
        $('#drpCorpCent').change(function () {
            var SelectedText = $('option:selected', this).text();
            var SelectedValue = $('option:selected', this).val();
            var input, filter, table, tr, td, i;
            input = document.getElementById("drpCorpCent");
            filter = input.value.toUpperCase();
            table = document.getElementById("tblUsuarios");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }

        });
        $('#tblUsuarios').DataTable(
            {
                initComplete: function () {
                    this.api()
                        .columns()
                        .every(function () {
                            var column = this;
                            var select = $('<select class="form-select">SELECCIONAR<option value=""></option></select>')
                                .appendTo($(column.footer()).empty())
                                .on('change', function () {
                                    var val = $.fn.dataTable.util.escapeRegex($(this).val());

                                    column.search(val ? '^' + val + '$' : '', true, false).draw();
                                });

                            column
                                .data()
                                .unique()
                                .sort()
                                .each(function (d, j) {
                                    select.append('<option value="' + d + '">' + d + '</option>');
                                });
                        });
                },
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            }
        );

        var vEstatusFlag = '@ViewBag.EstatusFlag'
        var vEmpresaFlag = '@ViewBag.EmpresaFlag'
        var vCorporativoFlag = '@ViewBag.CorporativoFlag'
        var vGeneroFlag = '@ViewBag.GeneroFlag'
        var vAreaFlag = '@ViewBag.AreaFlag'
        var vPerfilFlag = '@ViewBag.PerfilFlag'
        var vRolFlag = '@ViewBag.RolFlag'

        if (vEstatusFlag == 0) {
            document.getElementById("iNuevo").style.visibility = "hidden";
            document.getElementById("iAcciones").style.visibility = "hidden";
        }
        else {
            if (vEmpresaFlag == 0) {
                document.getElementById("iNuevo").style.visibility = "hidden";
                document.getElementById("iAcciones").style.visibility = "hidden";
            }
            else {
                if (vCorporativoFlag == 0) {
                    document.getElementById("iNuevo").style.visibility = "hidden";
                    document.getElementById("iAcciones").style.visibility = "hidden";

                }
                else {
                    if (vGeneroFlag == 0) {
                        document.getElementById("iNuevo").style.visibility = "hidden";
                        document.getElementById("iAcciones").style.visibility = "hidden";

                    }
                    else {
                        if (vAreaFlag == 0) {
                            document.getElementById("iNuevo").style.visibility = "hidden";
                            document.getElementById("iAcciones").style.visibility = "hidden";

                        }
                        else {
                            if (vPerfilFlag == 0) {
                                document.getElementById("iNuevo").style.visibility = "hidden";
                                document.getElementById("iAcciones").style.visibility = "hidden";

                            }
                            else {
                                if (vRolFlag == 0) {
                                    document.getElementById("iNuevo").style.visibility = "hidden";
                                    document.getElementById("iAcciones").style.visibility = "hidden";

                                }
                                else {
                                    document.getElementById("iNuevo").style.visibility = "visible";
                                    document.getElementById("iAcciones").style.visibility = "visible";

                                }
                            }
                        }
                    }
                }
            }
        }
    });
</script>
}
