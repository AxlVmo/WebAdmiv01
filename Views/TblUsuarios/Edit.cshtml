@model WebAdmin.Models.TblUsuario

@{
ViewData["Title"] = "Editar Usuaio";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Informacion /</span> Empresa</h4>
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-8">
            <div class="card-header d-flex align-items-center justify-content-between">
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdUsuario" />
                    <input type="hidden" asp-for="IdCorpCent" />
                    <input type="hidden" asp-for="IdCorporativo" />
                    <input type="hidden" asp-for="IdColonia" />
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="FechaNacimiento" class="form-label" asp-for="FechaNacimiento"></label>
                        <div class="input-group input-group-merge">
                            <span id="2" class="input-group-text"><i class="bx bx-check-shield"></i></span>
                            <input style="text-transform:uppercase" type="date" class="form-control" id=""
                                placeholder="Campo Requerido" aria-label="John Doe" aria-describedby="2"
                                asp-for="FechaNacimiento" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
@{

await Html.RenderPartialAsync("_ValidationScriptsPartial");

<script type="text/javascript">

    $(document).ready(function () {
        filtro_colonias();
    });

    function filtro_cp() {

        var valor_cp = document.getElementById("iCodigoPostal").value;

        $.ajax({
            type: "GET",
            url: "/CatCodigosPostales/FiltroCodigosPostales/",
            data: { id: valor_cp },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {
                var $select_colonias = $('#drpColonias');
                $("#drpColonias").empty();

                if (list.length == 0) {
                    $select_colonias.append('<option value="">SELECCIONAR</option>');
                    document.getElementById("idLocalidadMunicipio").value = null;
                    document.getElementById("idCiudad").value = null;
                    document.getElementById("idEstados").value = null;
                }
                else {
                    $select_colonias.append('<option value="">SELECCIONAR</option>');
                    for (var i = 0, len = list.length; i < len; i++) {
                        $select_colonias.append('<option value=' + list[i].idAsentaCpcons + '>' + list[i].dasenta + '</option>');
                        document.getElementById("idLocalidadMunicipio").value = list[i].dmnpio;
                        document.getElementById("idCiudad").value = list[i].dciudad;
                        document.getElementById("idEstados").value = list[i].destado;
                    }
                }
            },
            error: function () {
                alert("Error!!")
            }
        });
    }
    function filtro_colonias() {

        var valor_col = document.getElementById("IdColonia").value;
        var valor_cp = document.getElementById("iCodigoPostal").value;
        $.ajax({
            type: "GET",
            url: "/CatCodigosPostales/FiltroColonia/",
            data: { id: valor_cp, idC: valor_col },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {
                var $select_colonias = $('#drpColonias');
                $("#drpColonias").empty();
                if (list.length == 0) {
                    $select_colonias.append('<option value="">SELECCIONAR</option>');
                }
                else {

                    for (var i = 0, len = list.length; i < len; i++) {
                        $select_colonias.append('<option value=' + list[i].idAsentaCpcons + '>' + list[i].dasenta + '</option>');
                    }
                }
            },
            error: function () {
                alert("Error!!")
            }
        });
    }

</script>

}
}