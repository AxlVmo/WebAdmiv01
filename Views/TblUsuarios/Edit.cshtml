        var f_fecha_contratacion = $('#i_fecha_contratacion').val();
        var f_fecha_ingreso = $('#i_fecha_ingreso').val();
        var f_tipo_forma_pago = $('#l_tipo_forma_pago').val();
        var f_usuario_remuneracion = $('#i_usuario_remuneracion').val();
        var f_input = $('#l_input').val();

        if (f_genero == "") {
            validate('l_genero')
        }
        else if (f_nombres == "") {
            validate('i_nombres')
        }
        else if (f_apellido_paterno == "") {

            validate('i_apellido_paterno')
        }
        else if (f_apellido_materno == "") {

            validate('i_apellido_materno')
        }
        else if (f_personal_estudio == "") {

            validate('l_personal_estudio')
        }
        else if (f_area == "") {

            validate('l_area')
        }
        else if (f_perfil == "") {

            validate('l_perfil')
        }
        else if (f_rol == "") {

            validate('l_rol')
        }
        else if (f_tipo_contratacion == "") {

            validate('l_tipo_contratacion')
        }
        else if (f_fecha_contratacion == "0001-01-01" ) {

            validate('i_fecha_contratacion')
        }
        else if (f_fecha_ingreso == "0001-01-01") {

            validate('i_fecha_ingreso')
        }
        else if (f_tipo_forma_pago == "") {

            validate('l_tipo_forma_pago')
        }
        else if (f_usuario_remuneracion == "" || f_usuario_remuneracion == "0") {

            validate('i_usuario_remuneracion')
        }
        else
        {
vNotify.info({ text: 'Se completaron los campos requeridos.', title: 'Intelimundo.' });
            document.getElementById("btn_guardar").removeAttribute("disabled");
        }
    })

function validate(inputID) {
        switch (inputID) {
            case 'l_genero':
                vNotify.error({ text: 'Tipo Genero, Requerido.', title: 'Intelimundo.' });
                break;
            case 'i_nombres':
                vNotify.error({ text: 'Nombre(s), Requerido.', title: 'Intelimundo.' });
                break;
            case 'i_apellido_paterno':
                vNotify.error({ text: 'Apellido Paterno, Requerido.', title: 'Intelimundo.' });
                break;
            case 'i_apellido_materno':
                vNotify.error({ text: 'Apellido Materno, Requerido.', title: 'Intelimundo.' });
                break;
            case 'l_personal_estudio':
                vNotify.error({ text: 'Estudios, Requerido.', title: 'Intelimundo.' });
                break;
                case 'l_area':
                vNotify.error({ text: 'Area, Requerido.', title: 'Intelimundo.' });
                break;
                case 'l_perfil':
