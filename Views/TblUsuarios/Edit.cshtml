                break;
                case 'l_rol':
                vNotify.error({ text: 'Rol, Requerido.', title: 'Intelimundo.' });
                break;
                case 'l_tipo_contratacion':
                vNotify.error({ text: 'Tipo Contratacion, Requerido.', title: 'Intelimundo.' });
                break;
                case 'i_fecha_contratacion':
                vNotify.error({ text: 'Fecha de Contratacion, Requerido.', title: 'Intelimundo.' });
                break;
                case 'i_fecha_ingreso':
                vNotify.error({ text: 'Fecha de Ingreso, Requerido.', title: 'Intelimundo.' });
