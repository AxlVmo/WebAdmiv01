@model WebAdmin.Models.TblUsuario
@{
    ViewData["Title"] = "Crear Usuaio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administración /</span> Usuario</h4>
    <div class="col-xxl">
        <div class="card mb-8">
            <div class="card-header d-flex align-items-center justify-content-between">
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="IdGenero" class="control-label"></label>
                                    <select id="drpGenero" class="form-select"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')" required asp-for="IdGenero"
                                        asp-items="@(new SelectList(ViewBag.ListaGenero,"IdGenero","GeneroDesc"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="FechaNacimiento" class="control-label"></label>
                                    <input spellcheck="true" asp-for="FechaNacimiento" class="form-control" />
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="IdArea" class="control-label"></label>
                                    <select id="drpArea" class="form-select"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')" required asp-for="IdArea"
                                        asp-items="@(new SelectList(ViewBag.ListaArea,"IdArea","AreaDesc"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="IdPerfil" class="control-label"></label>
                                    <select id="drpPerfil" class="form-select"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')" required asp-for="IdPerfil"
                                        asp-items="@(new SelectList(ViewBag.ListaPerfil,"IdPerfil","PerfilDesc"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="IdRol" class="control-label"></label>
                                    <select id="drpRol" class="form-select"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')" required asp-for="IdRol"
                                        asp-items="@(new SelectList(ViewBag.ListaRol,"IdRol","RolDesc"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="Nombres" class="control-label"></label>
                                    <input spellcheck="true" style="text-transform:uppercase" type="text"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')" required asp-for="Nombres"
                                        class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="ApellidoPaterno" class="control-label"></label>
                                    <input spellcheck="true" style="text-transform:uppercase" type="text"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')" required asp-for="ApellidoPaterno"
                                        class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="ApellidoMaterno" class="control-label"></label>
                                    <input spellcheck="true" style="text-transform:uppercase" type="text"
                                        oninvalid="this.setCustomValidity('Campo Requerido')"
                                        onchange="this.setCustomValidity('')" required asp-for="ApellidoMaterno"
                                        class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CorreoAcceso" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="button"
                                            onclick="">Generar</button>
                                    </div>
                                    <input spellcheck="true" type="email" asp-for="CorreoAcceso" class="form-control" id="iCorreoAcceso"
                                        aria-describedby="basic-addon2">
                                </div>
                            </div>
                        </div>
                    <div class="form-group">
                        <input spellcheck="true" type="submit" value="Crear" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                    </div>
                       </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
