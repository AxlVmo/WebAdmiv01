                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstatusRegistro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRelVentasPago">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRelVentasPago">Details</a> |
