        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoReferencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioModifico)
