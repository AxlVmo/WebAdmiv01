@model IEnumerable<WebAdmin.Models.RelVentasPagos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoReferencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioModifico)
            </th>
            <th>
