@model WebAdmin.Models.TblProveedorCompra

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administración /</span> Proveedores Compra</h4>
    <div class="col-xxl">
        <div class="card mb-8">
            <div class="card-header d-flex align-items-center justify-content-between">
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="NombreEmpresa" class="form-label" asp-for="NombreProveedorCompra"></label>
                            <div class="input-group input-group-merge">
                                <span id="2" class="input-group-text"><i class="fa-solid fa-exclamation"></i></span>
                                <input spellcheck="true" style="text-transform:uppercase" type="text"
                                    class="form-control" id="" placeholder="Requerido" aria-label="John Doe"
                                    aria-describedby="2" asp-for="NombreProveedorCompra" required
                                    oninvalid="this.setCustomValidity('Campo Requerido')"
                                    onchange="this.setCustomValidity('')" />
                            </div>
                        </div>
                        <div class="mb-3 col-md-3">
                            <label for="GiroComercial" class="form-label" asp-for="GiroComercial"></label>
                            <div class="input-group input-group-merge">
                                <input spellcheck="true" style="text-transform:uppercase" type="text"
                                    class="form-control" id="" aria-label="John Doe" aria-describedby="2"
                                    asp-for="GiroComercial" />
                            </div>
                        </div>
                          <div class="mb-3 col-md-3">
                            <label for="Rfc" class="form-label" asp-for="Rfc"></label>
                            <div class="input-group input-group-merge">
                                <input spellcheck="true" style="text-transform:uppercase" type="text"
                                    class="form-control" id="" aria-label="John Doe" aria-describedby="2"
                                    asp-for="Rfc" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input spellcheck="true" type="submit" value="Crear" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
