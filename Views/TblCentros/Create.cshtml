@model WebAdmin.Models.TblCentro

@{
    ViewData["Title"] = "Crear Centro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Empresa</li>
        <li class="breadcrumb-item">Control de Centro</li>

    </ol>
</nav>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="IdTipoCentro" class="control-label"></label>
                <select id="drpTipoCentros" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="IdTipoCentro"
                    asp-items="@(new SelectList(ViewBag.ListaTipoCentro,"IdTipoCentro","TipoCentroDesc"))">
                    <option value="">SELECCIONAR</option>
                </select>
                
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="IdTipoLicencia" class="control-label"></label>
                <select id="drpLicencias" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="IdTipoLicencia"
                    asp-items="@(new SelectList(ViewBag.ListaLicencia,"IdTipoLicencia","LicenciaDesc"))">
                    <option value="">SELECCIONAR</option>
                </select>
               
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="NombreCentro" class="control-label"></label>
                <input  style="text-transform:uppercase" type="text" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="NombreCentro" class="form-control" />
               
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Calle" class="control-label"></label>
                <input  style="text-transform:uppercase" type="text" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="Calle" class="form-control" />
               
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="CodigoPostal" class="control-label"></label>
                <div class="input-group mb-3">
                    <input type="number" asp-for="CodigoPostal" class="form-control" id="iCodigoPostal"
                        aria-label="CodigoPostal" aria-describedby="basic-addon2" pattern="[0-9]"
                        title="Solo números. Tamaño mínimo: 6">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" onclick="filtro_cp()">Buscar</button>
                    </div>
                </div>
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="Colonia" class="control-label"></label>
                <select id="drpColonias" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="Colonia">
                    <option value="">SELECCIONAR</option>
                </select>
              
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="LocalidadMunicipio" class="control-label"></label>
                <input id="idLocalidadMunicipio" style="text-transform:uppercase" asp-for="LocalidadMunicipio"
                    class="form-control" readonly="readonly" />
                <span asp-validation-for="LocalidadMunicipio" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="Ciudad" class="control-label"></label>
                <input id="idCiudad" style="text-transform:uppercase" asp-for="Ciudad" class="form-control"
                    readonly="readonly" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input id="idEstados" style="text-transform:uppercase" asp-for="Estado" class="form-control"
                    readonly="readonly" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input id="iCorreoElectronico" asp-for="CorreoElectronico" class="form-control" type="email" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" type="number" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
        </div>
         <div class="col-md-2">
            <div class="form-group">
                <label asp-for="CentroPresupuesto" class="control-label"></label>
                <input asp-for="CentroPresupuesto" class="form-control" type="number" />
                <span asp-validation-for="CentroPresupuesto" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdUsuarioControl" class="control-label"></label>
                <select id="IdUsuarioControl" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required asp-for="IdUsuarioControl"
                    asp-items="@(new SelectList(ViewBag.ListaUsuariosCentros,"IdUsuario","NombreUsuario"))">
                    <option value="">SELECCIONAR</option>
                </select>
               
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
    <label id="lbl_estatus" class="control-label"></label>
</form>


@section Scripts {
@{

await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
    $('#IdUsuarioControl').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
    $(document).ready(function () {
        $('.js-example-basic-single').select2();
    });
    function validaRFC() {
        let pattern = /^[a-zA-Z]{3,4}(\d{6})((\D|\d){2,3})?$/;
        let rfc = document.getElementById("iRFC").value;
        document.getElementById("estatus").innerHTML = pattern.test(rfc);
    }
    function filtro_cp() {

        var valor_cp = document.getElementById("iCodigoPostal").value;

        $.ajax({
            type: "GET",
            url: "/CatCodigosPostales/FiltroCodigosPostales/",
            data: { id: valor_cp },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {
                var $select_colonias = $('#drpColonias');
                $("#drpColonias").empty();

                if (list.length == 0) {
                    $select_colonias.append('<option value="">Seleccionar Colonia</option>');
                    document.getElementById("idLocalidadMunicipio").value = null;
                    document.getElementById("idCiudad").value = null;
                    document.getElementById("idEstados").value = null;
                }
                else {
                    $select_colonias.append('<option value="">Seleccionar Colonia</option>');
                    for (var i = 0, len = list.length; i < len; i++) {
                        $select_colonias.append('<option value=' + list[i].idAsentaCpcons + '>' + list[i].dasenta + '</option>');
                        document.getElementById("idLocalidadMunicipio").setAttribute('value', list[i].dmnpio);
                        document.getElementById("idCiudad").setAttribute('value', list[i].dciudad);
                        document.getElementById("idEstados").setAttribute('value', list[i].destado);
                    }
                }
            },
            error: function () {
                alert("Error!!")
            }
        });

    }
</script>
}
