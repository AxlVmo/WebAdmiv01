@model IEnumerable<WebAdmin.Models.TblCentro>

@{
    ViewData["Title"] = "Crear Centro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Empresa</li>
        <li class="breadcrumb-item">Control de Centro</li>
    
    </ol>
</nav>
<div class="row">
    <div class="col-md-2">
        <div class="form-group"></div>
        <p>
            <a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-action="Create" value="Nuevo"
                title="Nuevo"><i class="fas fa-plus"></i> Nuevo</a>
        </p>
    </div>
</div>
<table class="table" id="tblCentros">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.NombreCentro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.UsuarioAsignado)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.NombreCentro)
                </td>
                  <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.UsuarioAsignado)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td style="text-align:center">
                    @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check" style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-stop-circle" style="font-size: 1em; color: red;"></i>
                    }
                </td>
                <td style="text-align:center">
                    <a asp-action="Edit" asp-route-id="@item.IdCentro" class="btn btn-outline-secondary" title="Editar"><i
                        class="far fa-edit" style="font-size: 1em; color: #FFC300;"></i></a>
                    <a asp-action="Details" asp-route-id="@item.IdCentro" class="btn btn-outline-secondary"
                    title="Detalles"><i class="far fa-list-alt" style="font-size: 1em; color: #67C5C4 ;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdCentro" class="btn btn-outline-secondary"
                    title="Desactivar"><i class="far fa-stop-circle" style="font-size: 1em; color: #FF9333;"></i></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.NombreCentro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.UsuarioAsignado)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
           </tr>
    </tfoot>
</table>
@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#drpCorpCent').change(function () {
            var SelectedText = $('option:selected', this).text();
            var SelectedValue = $('option:selected', this).val();
            var input, filter, table, tr, td, i;
            input = document.getElementById("drpCorpCent");
            filter = input.value.toUpperCase();
            table = document.getElementById("tblSuministros");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }

        });

        $('#tblCentros').DataTable(
            {
                initComplete: function () {
                    this.api()
                        .columns()
                        .every(function () {
                            var column = this;
                            var select = $('<select class="form-select">SELECCIONAR<option value=""></option></select>')
                                .appendTo($(column.footer()).empty())
                                .on('change', function () {
                                    var val = $.fn.dataTable.util.escapeRegex($(this).val());

                                    column.search(val ? '^' + val + '$' : '', true, false).draw();
                                });

                            column
                                .data()
                                .unique()
                                .sort()
                                .each(function (d, j) {
                                    select.append('<option value="' + d + '">' + d + '</option>');
                                });
                        });
                },
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            }
        );

        var vEstatusFlag = '@ViewBag.EstatusFlag'
            var vEmpresaFlag = '@ViewBag.EmpresaFlag'
            var vCorporativo = '@ViewBag.CorporativoFlag'
            var vUsuariosFlag = '@ViewBag.UsuariosFlag'
            
            if (vEstatusFlag == 0) {
                document.getElementById("iNuevo").style.visibility = "hidden";
            }
            else {
                if (vEmpresaFlag == 0) {
                    document.getElementById("iNuevo").style.visibility = "hidden";
                }
                else {
                    if (vCorporativo == 0) {
                        document.getElementById("iNuevo").style.visibility = "hidden";
                    }
                    else {
                        if (vUsuariosFlag == 0) {
                            document.getElementById("iNuevo").style.visibility = "hidden";
                        }
                        else {
                            document.getElementById("iNuevo").style.visibility = "visible";
                        }
                    }
                }
            }
    });
</script>
}