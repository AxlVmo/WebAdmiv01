@model WebAdmin.ViewModels.VentasViewModel

@{
ViewData["Title"] = "Create";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administración /</span> Usuario</h4>
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-8">
            <div class="card-header d-flex align-items-center justify-content-between">
            </div>
            <div class="card-body">
                <div class="card-body">
                    <div class="row">
                        <div class="mb-3 col-md-3">
                            <label for="TblVentas.IdTipoVenta" class="form-label" asp-for="TblVentas.IdTipoVenta"></label>
                            <div class="input-group input-group-merge">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                            class="bx bx-check-shield"></i></span>
                                    <select id="lIdTipoVenta" class="form-select" required asp-for="TblVentas.IdTipoVenta" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required
                                        asp-items="@(new SelectList(ViewBag.ListaTipoVenta,"IdTipoVenta","TipoVentaDesc"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="TblVentas.IdCliente" class="form-label" asp-for="TblVentas.IdCliente"></label>
                            <div class="input-group input-group-merge">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                            class="bx bx-check-shield"></i></span>
                                    <select id="IdCliente" class="form-select" required asp-for="TblVentas.IdCliente" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required
                                        asp-items="@(new SelectList(ViewBag.ListaUsuariosCentros,"IdUsuario","NombreUsuario"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 col-md-2">
                            <label  class="form-label"> Descuento</label>
                            <div class="input-group input-group-merge">
                                <span id="2" class="input-group-text"><i class="bx bx-check-shield"></i></span>
                                <input id="iDescuento" style="text-transform:uppercase" type="number" class="form-control" id="" min="0" max="100" value="0"
                                     aria-label="John Doe" aria-describedby="2"  />
                            </div>
                   </div>    
                     </div>
                      <div class="row">
                        <div class="mb-3 col-md-4">
                            <label  class="form-label" asp-for="@Model.RelVentaProductos[0].TipoServicio"></label>
                            <div class="input-group input-group-merge">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                            class="bx bx-check-shield"></i></span>
                                    <select id="l_tipo_servicios" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required
                                        asp-items="@(new SelectList(ViewBag.ListaTipoServicio,"IdTipoServicio","TipoServicioDesc"))">
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                      <div class="mb-3 col-md-4">
                            <label  class="form-label" asp-for="@Model.RelVentaProductos[0].Servicio"></label>
                            <div class="input-group input-group-merge">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                            class="bx bx-check-shield"></i></span>
                                    <select id="l_servicios" class="form-select" required asp-for="@Model.RelVentaProductos[0].Servicio" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required>
                                        <option value="">SELECCIONAR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                      
                   
                   
                    <div class="row">
                            <div class="col-12">
                                <!-- Main content -->
                                <div class="invoice p-3 mb-3">
                                    <!-- Table row -->
                                    <div class="row">
                                        <div class="col-12 table-responsive">
                                            <table class="table" id="tbProducto">
                                                <tbody>
                                                    <thead>
                                                        </th>
                                                        <th style="text-align:center">
                                                            TIPO SERVICIO
                                                        </th>
                                                        <th style="text-align:center">
                                                            SERVICIO
                                                        </th>
                                                        <th style="text-align:center">
                                                            TOTAL
                                                        </th>
                                                        <th style="text-align:center">
                                                            PRECIO
                                                        </th>
                                                        <th style="text-align:center">
                                                            DESCUENTO
                                                        </th>
                                                        <th style="text-align:center">ACCIONES</th>
                                                    </thead>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <!-- /.row -->

                                   
                                    <!-- /.row -->
                                    <!-- this row will not appear when printing -->
                                
                                </div>
                                <!-- /.invoice -->
                            </div><!-- /.col -->
                        </div>
                    <div class="row">
                                        <!-- accepted payments column -->
                                        <div class="col-6">
                                            <div class="row no-print">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label  class="control-label">TIPO PAGO</label>
                                                        <select id="lTipoPago" class="form-select" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required
                                                            asp-items="@(new SelectList(ViewBag.ListaTipoPago,"IdTipoPago","TipoPagoDesc"))">
                                                            <option value="">SELECCIONAR</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group" id="lCodigoPago" hidden>
                                                        <label  class="control-label">CODIGO PAGO</label>
                                                        <input id="iCodigoPago"  class="form-control" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required/>
                                                    </div>
                                                     <div class="form-group" id="lCantidadAbono" hidden>
                                                        <label  class="control-label">ABONO</label>
                                                        <input id="iCantidadAbono"  class="form-control" oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group" id="lFechaAlterna">
                                                        <label  class="control-label">FECHA ALTERNA</label>
                                                        <input type="date" id="iFechaAlterna"  class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-6">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <tr>
                                                        <th style="width:50%">Subtotal:</th>
                                                        <td>$0.00</td>
                                                    </tr>
                                                    <tr>
                                                        <th>IVA (16 %)</th>
                                                        <td>$0.00</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Shipping:</th>
                                                        <td>$0.00</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Total:</th>
                                                        <td>$0.00</td>
                                                    </tr>
                                                </table>
                                            </div>
                    </div>
                            
                              
                                     
                    </div>

                      <div class="row">
                       
                        <div class="col-sm-10">
                             <br>
                             <button class="btn btn-success" id="btnTerminar">Guardar</button>
                                        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                                        <button class="btn btn-success" id="btnTerminar2"
                                            onclick="GetClientReport()">Imprimir</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
      $('#IdCliente').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
    $('#l_servicios').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
    $('#l_servicios').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
    });
    $('#l_tipo_servicios').change(function () {
        var SelectedText = $('option:selected', this).text();
        var SelectedValue = $('option:selected', this).val();
        $.ajax({
            type: "GET",
            url: "/TblServicios/FiltroServicios/",
            data: { id: SelectedValue },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {
                var $lista_servicios = $('#l_servicios');
                $("#l_servicios").empty();

                if (list.length == 0) {
                    $lista_servicios.append('<option value="">SELECCIONAR</option>');
                    $lista_servicios.attr('required', false);

                }
                else {
                    $lista_servicios.append('<option value="">SELECCIONAR</option>');
                    for (var i = 0, len = list.length; i < len; i++) {
                        $lista_servicios.append('<option value=' + list[i].idServicio + '>' + list[i].descServicio + '</option>');
                        $lista_servicios.attr('required', true);
                    }
                    alert("Servicios Cargados");
                }
            },
            error: function () {
                alert("Error!!")
            }
        });
    });
    
    $('#lTipoPago').change(function () {
        var SelectedText = $('option:selected', this).text();
        var SelectedValue = $('option:selected', this).val();

        if (SelectedValue != 1) {
            $('#lCodigoPago').removeAttr('hidden');
        }
        else {
            document.getElementById("lCodigoPago").setAttribute("hidden", true);
        }
    });
    $('#lIdTipoVenta').change(function () {
        var SelectedText = $('option:selected', this).text();
        var SelectedValue = $('option:selected', this).val();

        if (SelectedText == 'DIFERIDA') {
            $('#lCantidadAbono').removeAttr('hidden');
        }
        else {
            document.getElementById("lCantidadAbono").setAttribute("hidden", true);
        }
    });
    $('#l_servicios').change(function () {
        var SelectedText = $('option:selected', this).text();
        var SelectedValue = $('option:selected', this).val();

        $.ajax({
            type: "GET",
            url: "/TblServicios/fFiltroServicio/",
            data: { idA: SelectedValue },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {
                if (list.length == 0) {
                }
                else {
                    for (var i = 0, len = list.length; i < len; i++) {
                        var f_tipo_servicio = list[i].tipoServicioDesc;
                        var f_servicio = list[i].descServicio;
                        var f_precio = list[i].totalPrecioServicio;
                        var _desc = parseFloat($("#iDescuento").val())
                        var _prec = parseFloat(f_precio)
                        var _tprecio = _prec - (100 * (_desc / 100))

                        $("#tbProducto tbody").append(
                            $("<tr>").append(
                                $("<td style='text-align:center'>").text(f_tipo_servicio),
                                $("<td style='text-align:center'>").text(f_servicio),
                                $("<td style='text-align:center'>").text(_tprecio),
                                $("<td style='text-align:center'>").text(_prec),
                                $("<td style='text-align:center'>").text(_desc),
                                $("<td style='text-align:center'><a id='iDesactivaUsuario' class='btn btn-outline-secondary' title='Desactivar' onclick ='RemoveRow(this)'><i class='far fa-stop-circle' style='font-size: 1em; color: #FF9333;''></i></a></td>"))
                        )
                    }
                    var $lista_servicios = $('#l_servicios');
                    $("#l_servicios").empty();
                    $lista_servicios.append('<option value="">SELECCIONAR</option>');
                }
            },
        });
    });
    $("#btnTerminar").on("click", function () {

        var RelVenta_Productos = []
        var total = 0;

        $("#tbProducto > tbody > tr").each(function (i, tr) {

            RelVenta_Productos.push(
                {
                    TipoServicio: $(tr).find('td:eq(0)').text(),
                    Servicio: $(tr).find('td:eq(1)').text(),
                    TotalPrecio: $(tr).find('td:eq(2)').text(),
                    Precio: $(tr).find('td:eq(3)').text(),
                    Descuento: $(tr).find('td:eq(4)').text()

                }
            )

        })

        var oCompraVM = {
            TblVentas: {
                IdCliente: $("#IdCliente").val(),
                IdTipoPago: $("#lTipoPago").val(),
            },
            RelVentaProductos: RelVenta_Productos
        }

        jQuery.ajax({
            url: '@Url.Action("Index","TblVentas")',
            type: "POST",
            data: JSON.stringify(oCompraVM),
            datatype: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                if (data.respuesta) {
                    alert("Venta Registrada")

                    location.reload();
                }

            }

        })

    })
    function RemoveRow(o) {
    //no clue what to put here?
    var p = o.parentNode.parentNode;
    p.parentNode.removeChild(p);
    }
    </script>
    }