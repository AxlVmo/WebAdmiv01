    function DatosProductos() {
        var vProducto = document.getElementById("drpCategoria").value;

        $.ajax({
            type: "GET",
            url: "/CatProductos/FiltroProductos/",
            data: { id: vProducto },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {
                var $select_colonias = $('#drpProducto');
                $("#drpProducto").empty();

                if (list.length == 0) {
                    $select_colonias.append('<option value="">SELECCIONAR</option>');
                    $select_colonias.attr('required', false);
                    $("#btnMostrar").setAttribute("disabled");
                }
                else {
                    $select_colonias.append('<option value="">SELECCIONAR</option>');
                    for (var i = 0, len = list.length; i < len; i++) {
                        $select_colonias.append('<option value=' + list[i].idProducto + '>' + list[i].descProducto + '</option>');
                        $select_colonias.attr('required', true);
                    }
                    $("#btnMostrar").removeAttr("disabled");
                }
            },
            error: function () {
                alert("Error!!")
            }
        });
        return false;
    }
    function mProductos() {
        var vProducto = document.getElementById("drpProducto").value;
        $.ajax({
            type: "GET",
            url: "/CatProductos/fFiltroProducto/",
            data: { idA: vProducto },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {
                if (list.length == 0) {
                    document.getElementById("iCategoria").value = null;
                    document.getElementById("iProducto").value = null;
                    document.getElementById("iPrecio").value = null;
                }
                else {

                    for (var i = 0, len = list.length; i < len; i++) {
                        document.getElementById("iCategoria").value = list[i].descCategoria;
                        document.getElementById("iProducto").value = list[i].descProducto;
                        document.getElementById("iPrecio").value = list[i].totalPrecioProducto;
                    }
                    $("#btnAddProducto").removeAttr("disabled");
                }
            },
            error: function () {
                alert("Error!!")
            }
        });
        return false;
    }
