@model IEnumerable<WebAdmin.Models.TblVenta>

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administración /</span> Ventas</h4>
    <div class="card">
        <h5 class="card-header">
            <div class="row">
                <div class="mb-3 col-md-6">
<a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-action="Create"><i class="fas fa-plus"></i> Nuevo</a>
                </div>
                 <div class="mb-3 col-md-6">
                     <div class="row mb-3" id="iCorpCent" hidden>
                                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Corporativo / Centro</label>
                                    <div class="col-sm-10">
                                      <div class="input-group input-group-merge">
                                        <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                            class="bx bx-check-shield"></i></span>
                                        <select class="form-select" id="drpCorpCent"
                                          asp-items="@(new SelectList(ViewBag.ListaCorpCent,"IdCentro","CentroDesc"))">
                                          <option value="">SELECCIONAR</option>
                                        </select>
                                      </div>
                                    </div>
                                </div>
                </div>
            </div>
        </h5>
        <div class="table-responsive text-nowrap">
            <div class="row">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompletoAlumno)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CentroDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompletoAlumno)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.CentroDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
             <td style="text-align:center">
                    @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check-circle" style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-stop-circle" style="font-size: 1em; color: red;"></i>
                    }
                </td>
             <td style="text-align:center">
                    <a asp-action="Details" asp-route-id="@item.IdVenta" class="btn btn-outline-secondary"
                    title="Detalles"><i class="far fa-list-alt" style="font-size: 1em; color: #67C5C4 ;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdVenta" class="btn btn-outline-secondary"
                    title="Desactivar"><i class="far fa-stop-circle" style="font-size: 1em; color: #FF9333;"></i></a>
                </td>
            </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>
