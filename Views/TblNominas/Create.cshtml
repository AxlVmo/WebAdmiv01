@model WebAdmin.Models.TblNomina
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administración /</span> Nomina</h4>
  <!-- Basic with Icons -->
  <div class="col-xxl">
    <div class="card mb-8">
      <div class="card-header d-flex align-items-center justify-content-between">
      </div>
      <div class="card-body">
        <form asp-action="Create">
        <div class="card-body">
            <div class="row">
                <div class="mb-3 col-md-3">
                    <label for="IdUsuarioRemuneracion" class="form-label" asp-for="IdUsuarioRemuneracion"></label>
                    <div class="input-group input-group-merge">
                        <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                    class="bx bx-check-shield"></i></span>
                            <select id="IdUsuarioRemuneracion" class="form-select" required asp-for="IdUsuarioRemuneracion"
                                oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')"
                                required
                                asp-items="@(new SelectList(ViewBag.ListaUsuariosCentros,"IdUsuario","NombreUsuario"))">
                                <option value="">SELECCIONAR</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-3 col-md-3">
                    <label for="NominaDesc" class="form-label" asp-for="NominaDesc"></label>
                    <div class="input-group input-group-merge">
                        <span id="2" class="input-group-text"><i class="bx bx-check-shield"></i></span>
                        <input style="text-transform:uppercase" type="text" class="form-control" id="NominaDesc" asp-for="NominaDesc"
                            placeholder="Requerido" aria-label="John Doe" aria-describedby="2"
                            oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required />
                    </div>
                </div>
                <div class="mb-3 col-md-2">
                    <label for="UsuarioRemuneracion" class="form-label" asp-for="UsuarioRemuneracion"></label>
                    <div class="input-group input-group-merge">
                        <span id="2" class="input-group-text"><i class="bx bx-check-shield"></i></span>
                        <input style="text-transform:uppercase" type="text" class="form-control" id="UsuarioRemuneracion"
                            placeholder="Requerido" aria-label="John Doe" aria-describedby="2"
                            oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required
                            asp-for="UsuarioRemuneracion" />
                    </div>
                </div>
                <div class="mb-3 col-md-2">
                    <label for="IdTipoPago" class="form-label" asp-for="IdTipoPago"></label>
                    <div class="input-group input-group-merge">
                        <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                    class="bx bx-check-shield"></i></span>
                            <select id="lTipoPago" class="form-select" required asp-for="IdTipoPago"
                                oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')"
                                required asp-items="@(new SelectList(ViewBag.ListaTipopago,"IdTipoPago","TipoPagoDesc"))">
                                <option value="">SELECCIONAR</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-3 col-md-2" id="lCodigoPago" hidden>
                    <label for="CodigoPago" class="form-label" asp-for="CodigoPago"></label>
                    <div class="input-group input-group-merge">
                        <span id="2" class="input-group-text"><i class="bx bx-check-shield"></i></span>
                        <input style="text-transform:uppercase" type="text" class="form-control" id="iCodigoPago"
                            placeholder="Requerido" aria-label="John Doe" aria-describedby="2"
                            oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')" required
                            asp-for="CodigoPago" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                <a asp-action="" asp-route-IdNomina="1" class="btn btn-info text-white">Imprimir</a>
            </div>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $('#IdUsuarioRemuneracion').change(function () {
        var SelectedText = $('option:selected', this).text();
        var SelectedValue = $('option:selected', this).val();

        $.ajax({
            type: "GET",
            url: "/TblUsuarios/fUsuarioNomina/",
            data: { id: SelectedValue },
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (list) {

                if (list.length == 0) {
                    document.getElementById("NominaDesc").value = null;
                    document.getElementById("UsuarioRemuneracion").value = null;
                }
                else {
                    for (var i = 0, len = list.length; i < len; i++) {
                        document.getElementById("NominaDesc").value = "NOMINA";
                        document.getElementById("UsuarioRemuneracion").value = list[i].usuarioRemuneracion;
                    }
                }
            },
            error: function () {
                alert("Error!!")
            }
        });
    });
    $('#lTipoPago').change(function () {
        var SelectedText = $('option:selected', this).text();
        var SelectedValue = $('option:selected', this).val();

        if (SelectedValue != 1) {
            $('#lCodigoPago').removeAttr('hidden');
        }
        else {
            document.getElementById("lCodigoPago").setAttribute("hidden", true);
        }
    });
</script>
}
