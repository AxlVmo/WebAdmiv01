@model WebAdmin.Models.TblProveedor

@{
ViewData["Title"] = "Editar Proveedor";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Empresa</li>
        <li class="breadcrumb-item">Control de Proveedor</li>
        <li class="breadcrumb-item active" aria-current="page">Editar Proveedor</li>
    </ol>
</nav>
<hr />

<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input spellcheck="true" type="hidden" asp-for="IdProveedor" />

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="NombreProveedor" class="control-label"></label>
                    <input spellcheck="true" style="text-transform:uppercase" type="text"
                        oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')"
                        required asp-for="NombreProveedor" class="form-control" />

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="GiroComercial" class="control-label"></label>
                    <input spellcheck="true" style="text-transform:uppercase" type="text"
                        oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')"
                        required asp-for="GiroComercial" class="form-control" />

                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="Rfc" class="control-label"></label>
                    <input spellcheck="true" style="text-transform:uppercase" type="text"
                        oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')"
                        required asp-for="Rfc" class="form-control" />

                </div>
            </div>
            @* <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="IdEstatusRegistro" class="control-label"></label>
                    <select id="idEstatusLista" class="form-select"
                        oninvalid="this.setCustomValidity('Campo Requerido')" onchange="this.setCustomValidity('')"
                        required asp-for="IdEstatusRegistro" asp-items="@(new SelectList(ViewBag.ListaCatEstatus,"
                        IdEstatusRegistro","EstatusDesc"))">
                        <option value="">SELECCIONAR</option>
                    </select>

                </div>
            </div> *@
        </div>

        <div class="form-group">
            <input spellcheck="true" type="submit" value="Actualizar" class="btn btn-warning" />
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </div>
    </form>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}