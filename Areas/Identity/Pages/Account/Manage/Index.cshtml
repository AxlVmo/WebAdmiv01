@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    
}

<h4>Cargar imagen de perfil</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
                <label asp-for="Input.Nombres"></label>
                <input asp-for="Input.Nombres" class="form-control" />
                <span asp-validation-for="Input.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ApellidoPaterno"></label>
                <input asp-for="Input.ApellidoPaterno" class="form-control" />
                <span asp-validation-for="Input.ApellidoPaterno" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="Input.ApellidoMaterno"></label>
                <input asp-for="Input.ApellidoMaterno" class="form-control" />
                <span asp-validation-for="Input.ApellidoMaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" readonly />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ProfilePicture" style="width: 100%;"></label>
                @if (Model.Input.ProfilePicture != null)
                {
                    <img id="profilePicture" style="width:250px;height:300px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
        
                }
                else
                {
                    <img id="profilePicture" style="width:250px;height:300px; object-fit:cover" src="">
        
                }
    
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="Input.ProfilePicture"
                       class="form-control"
                      
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}